@model Coroa

<div class="col-sm-4 col-md-4 col-lg-4">
    <p><img src="@Model.ImagemUrl" class="img-fluid"></p>
    <h3>@Model.Preco.ToString("c")</h3>

    <h4>
    <a asp-controller="Coroa" asp-action="Details" 
    asp-route-coroaId="@Model.CoroaId">@Model.Nome</a>
    </h4>

    <p>@Model.DescricaoCurta</p>
      <div>
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" 
            asp-action="AdicionarItemNoCarrinhoCompra" asp-route-CoroaId="@Model.CoroaId">
            Incluir no Carrinho
        </a>
        </p>
    </div>

</div>